<%# Partial that renders search results as an HTML fragment for no-JS fallback %>
<% if items.present? && items.any? %>
  <ul style="list-style:none; padding:0; margin:0.5rem 0 0 0;">
    <% items.each do |it| %>
      <li style="padding:.5rem; border-bottom:1px solid #eee; cursor:pointer;">
        <%= (it['name'] || it['title'] || 'Unnamed') %>
      </li>
    <% end %>
  </ul>
<% else %>
  <div class="no-results" style="color:#666; margin-top:.5rem;">No ingredients found</div>
<% end %>
